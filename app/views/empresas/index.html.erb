<p id="notice"><%= notice %></p>

<h1>Empresas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Logo</th>
      <th>Personas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.logo %></td>
        <td><%= empresa.personas %></td>
        <td><%= link_to 'Mostrar', empresa, class:"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Editar', edit_empresa_path(empresa),class:"btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Eliminar', empresa, method: :delete, data: { confirm: 'Esta seguro?' },class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

