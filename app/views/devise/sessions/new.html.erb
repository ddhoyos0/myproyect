
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row" align="center">
      <div class="col-md-12">
        <h1>Iniciar sesi√≥n</h1>
     </div>
      <div class="col-md-6 mx-auto">
        <div id="first">
          <div class="myform form "align="left">             
           <form action="" method="post" name="login">
             <div class="form-group">
                 <div class="form-inputs">
                  <%= f.input :email,required: false, autofocus: true,input_html: { autocomplete: "email",placeholder:"Enter email" } %>    
                </div>
             </div>
             <div class="form-group">
              <div class="form-inputs">
                <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
              </div>
              <div class="form-group">
                <div class="form-inputs">
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
              </div>
             </div>            
             <div class="col-md-12 text-center ">
                <div class="form-actions">
                  <%= f.button :submit, "Ingresar",class:" btn btn-block mybtn btn-primary tx-tfm" %>
                </div>              
             </div>             
             <div class="col-md-12 text-center">
              <div class="form-actions">  
                <%= render "devise/shared/links" %>  
              </div>              
             </div>            
          </form>             
        </div>
      </div>
    </div>
  </div> 
<% end %>
