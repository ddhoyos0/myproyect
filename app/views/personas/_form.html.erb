<%= simple_form_for(@persona, local: true) do |form| %>
  <% if persona.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(persona.errors.count, "error") %> prohibited this persona from being saved:</h2>

      <ul>
        <% persona.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  
  <div class="card">
    <div class="card-header">
      <div class="row"align ="right">

        <div class="col-md-4 mb-1">      
          <%= form.association :documento %>
        </div>

        <div class="col-md-4 mb-1">
          <%= form.label :identificacion %>
          <%= form.text_field :identificacion %>
        </div>

        <div class="col-md-4 mb-1">
          <%= form.label :nombre %>
          <%= form.text_field :nombre %>
        </div>

      </div>
      <br/>
      <div class="row"align="right">

        <div class="col-md-4 mb-1">
          <%= form.label :direccion %>
          <%= form.text_field :direccion %>
        </div>

        <div class="col-md-4 mb-1">
          <%= form.label :telefono %>
          <%= form.text_field :telefono %>
        </div>

        <div class="col-md-4 mb-1">
          <%= form.label :celular %>
          <%= form.text_field :celular %>
        </div>
      </div>
      <br/>
      <div class="row"align= "right">

        <div class="col-md-4 mb-1">
          <%= form.label :Email %>
          <%= form.text_field :correo %>
        </div>

        <div class="col-md-4 mb-1"align="left">          
          <%= form.input :fecha_nacimiento, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 12  %>
        </div>
      </div>
      <div class="actions" align="center">
        <%= form.submit "Guardar",class:"btn btn-success" %>  
      </div>
    </div>
  </div>
<% end %>
