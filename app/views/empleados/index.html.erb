<p id="notice"><%= notice %></p>

<h1 align="center">Empleados</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cargo</th>
      <th>Persona</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
        <td><%= empleado.cargo %></td>
        <td><%= empleado.persona.try(:nombre) %></td>
        <td><%= link_to 'Mostrar', empleado , class:"btn btn-info btn-sm"%></td>
        <td><%= link_to 'Editar', edit_empleado_path(empleado) ,class:"btn btn-warning btn-sm"%></td>
        <td><%= link_to 'Eliminar', empleado, method: :delete, data: { confirm: 'EstÃ¡ seguro ?' } ,class:"btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
  <%= link_to 'Guardar', new_empleado_path, class:"btn btn-success btn-sm" %>
</div>