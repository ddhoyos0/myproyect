  <p id="notice"><%= notice %></p>

  <h1>Marcas</h1>

    <form class="form-inline" width:"10px">
      <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label=
      "Search" />
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
    </form>

  <table class="table responsive">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @marcas.each do |marca| %>
        <tr>
          <td><%= marca.nombre %></td>
          <td><%= link_to 'Ver', marca,  class:"btn btn-info btn-sm"%></td>
          <td><%= link_to 'Editar', edit_marca_path(marca), class:"btn btn-warning btn-sm"%></td>
          <td><%= link_to 'Eliminar', marca, method: :delete, data: { confirm: 'Esta seguro?' } ,class:"btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Agregar Marca', new_marca_path, class:"btn btn-secondary btn-sm"%>
