<p id="notice"><%= notice %></p>

<h1 align="center">Cita</h1>

<table class="table">
  <thead >
    <tr>
      <th >Servicio</th>
      <th>Empleado</th>
      <th>Fecha</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cita.each do |citum| %>
      <tr>
        <td><%= citum.servicio %></td>
        <td><%= citum.empleado %></td>
        <td><%= citum.fecha %></td>
        <td><%= citum.user %></td>
        <td><%= link_to 'Ver', citum,  class:"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Editar', edit_citum_path(citum),class:"btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Eliminar', citum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

