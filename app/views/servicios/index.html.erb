<p id="notice"><%= notice %></p>

<h1 align="center">Servicios</h1>

<table class="table">
  <thead>
    <tr>
      <th>Tipo de Servicio</th>
      <th>Nombre</th>
      <th>Duración</th> 
      <th>Precio</th>
      <th>Iva</th>    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicios.each do |servicio| %>
      <tr>
        <td><%= servicio.tipo_de_servicio.try(:nombre)%></td>
        <td><%= servicio.nombre %></td>
        <td><%= servicio.duracion %></td> 
        <td><%= servicio.precio %></td>
        <td><%= servicio.impuesto.try(:valor) %></td>        
        <td><%= link_to 'Mostrar', servicio,class:"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Editar', edit_servicio_path(servicio), class:"btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Eliminar', servicio, method: :delete, data: { confirm: 'Estas seguro?' },class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Añadir Servicio', new_servicio_path, class:"btn btn-success btn-sm" %>
